@model IEnumerable<DVDEmporium.Models.Director>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center heading-font">All Directors</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Director</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DirectorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DirectorName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.DirectorID">Edit</a> |
                
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.DirectorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
