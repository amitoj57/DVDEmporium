@model DVDEmporium.Models.Studio

@{
    ViewData["Title"] = "Edit";
}

<h1  class="text-center heading-font">Edit Studio Details</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudioID" />
            <div class="form-group">
                <label asp-for="StudioName" class="control-label"></label>
                <input asp-for="StudioName" class="form-control" />
                <span asp-validation-for="StudioName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">View All Studios</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
