@model IEnumerable<DVDEmporium.Models.Genre>

@{
    ViewData["Title"] = "Index";
}

<h1  class="text-center heading-font">All Genres</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Genre</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.GenreID">Edit</a> |
                
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.GenreID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
