@model DVDEmporium.Models.Genre

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center heading-font">Are you sure you want to delete this Genre?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GenreName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GenreName)
