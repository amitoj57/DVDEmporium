@model IEnumerable<DVDEmporium.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1 class="heading-font text-center">All Movies</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Movie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TagLine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieStudio.StudioName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TagLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieStudio.StudioName)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.MovieID">Edit</a> |
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.MovieID">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.MovieID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
