@model IEnumerable<DVDEmporium.Models.Studio>

@{
    ViewData["Title"] = "All Studios";
}


<div class="text-center">
    <h1 class="display-4 heading-font">All Movie Studios</h1>
</div>
<hr />
<div class="row" style="margin-bottom:50px;">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card w-100">
                <center>
                    <img src="~/images/studio.jpg" alt="" style="width:100%">
                </center>
                <div class="card-body">
                    <h5 class="card-text">
                        @item.StudioName
                    </h5>
                    <a class="btn btn-success btn-block" asp-action="ViewMoviesByStudio" asp-route-id="@item.StudioID">Display All Movies</a>
                </div>

            </div>
        </div>
    }
</div>
