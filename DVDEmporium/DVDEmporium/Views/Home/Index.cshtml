@model IEnumerable<DVDEmporium.Models.Genre>
@{
    ViewData["Title"] = "Home Page";
}
<div id="demo" class="carousel slide" data-ride="carousel">
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
        <li data-target="#demo" data-slide-to="3"></li>
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/slider/slide1.jpg" alt="Slide 1" style="width:100%;height:600px">
            <div class="carousel-caption">

            </div>
        </div>
        <div class="carousel-item">
            <img src="~/slider/slide2.jpg" alt="Slide 2" style="width:100%;height:600px">
            <div class="carousel-caption">

            </div>
        </div>
        <div class="carousel-item">
            <img src="~/slider/slide3.jpg" alt="Slide 3" style="width:100%;height:600px">
            <div class="carousel-caption">
                Watch at Your Place
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/slider/slide4.jpg" alt="Slide 3" style="width:100%;height:600px">
            <div class="carousel-caption">
                Enjoy a Life Time Experience
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

<div class="text-center">
    <h1 class="display-4 heading-font">All Movie Genres</h1>
</div>
<hr />
<div class="row" style="margin-bottom:50px;">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card w-100">
                <center>
                    <img src="~/images/genre.jpg" alt="" style="width:100%">
                </center>
                <div class="card-body">
                    <h5 class="card-text">
                        @item.GenreName
                    </h5>
                    <a class="btn btn-success btn-block" asp-action="ViewMoviesByGenre" asp-route-id="@item.GenreID">Display All Movies</a>
                </div>

            </div>
        </div>
    }
</div>